.selectedWord {
  position: fixed;
  width: 50px;
  height: 50px;
  top: 50%;
  left: 50%;
  margin: -25px 0 0 -25px;
  text-align: center;
  line-height: 50px;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  border-radius: 5px;
}

.wordList {
  position: fixed;
  top: 0;
  right: 5px;
  bottom: 0;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  text-align: center;
}

.wordItem {
  -webkit-box-flex: 1;
  line-height: 2;
}

.wordList.deep {
  background: rgba(0, 0, 0, 0.6);
}

.itemList {
  margin: 0;
  padding: 0;
  width: 100%;
}

.nameIndex {
  padding: 0.375rem 0.75rem;
  font-size: 0.75rem;
  color: #666;
  background-color: #f5f5f5;
}

.nameItem {
  margin: 0 5px;
  color: #444;
  padding: 5px 0;
  line-height: 2;
  border-bottom: solid #e9e9e9 1px;
}

.nameItem::last-child {
  border-bottom: 0;
}

.imageItem {
  width: 30px;
  height: 30px;
  vertical-align: top;
}

.detailList {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 100%;
  width: 100%;
  transition: all 0.3s;
  transform: translate(0, 0);
  background-color: rgba(0, 0, 0, 0.6);
}

.detailList.show {
  transform: translate(-100%, 0);
}

.serieList {
  width: 50%;
  height: 100%;
  transform: translate(100%, 0);
  background: #fff;
  overflow: scroll;
}

.detail {
  color: #666;
  background-color: #f5f5f5;
}
.carName{
  font-size: 26rpx;
}
.carPrice{
  font-size: 14rpx;
  color: red;
}